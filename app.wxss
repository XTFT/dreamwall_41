
/**app.wxss**/
input,.picker{background: #fff;}
modal text{padding:6px 0 0 6px;}
.clearfix:after{content: '';clear: both;display: block;height:1px;}
page{position: relative;min-height:100%;background:#aaa;}
/* image{} */
view{
    word-break: break-all
}
button{
    border:none;
}
/*宽度*/
.w{width:680rpx;margin:0 auto;}
.full{width:100%;}

/*定位*/
.pr{position: relative;}
.pa{position: absolute;}
.pf{position: fixed}

/*文字超出省略*/
.ellips {
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    display: block;
}

/*对齐*/
.tl{text-align: left;}
.tc{text-align: center;}
.tr{text-align: right;}

/*间距*/
.mt5{margin-top: 5rpx;}
.mt10{margin-top: 10rpx;}
.mt15{margin-top: 15rpx;}
.mt20{margin-top: 20rpx;}

.mr5{margin-right: 5rpx}
.mr10{margin-right: 10rpx}
.mr15{margin-right:15rpx}
.mr20{margin-right: 20rpx}

.mb5{margin-bottom: 5rpx}
.mb10{margin-bottom: 10rpx}
.mb15{margin-bottom: 15rpx}
.mb20{margin-bottom: 20rpx}

.ml5{margin-left: 5rpx}
.ml10{margin-left: 10rpx}
.ml15{margin-left: 15rpx}
.ml20{margin-left: 20rpx}

/*背景*/
.bg_f{background: #fff}

/*边框*/
.bd_t{border-top: 1px solid #eee;}
.bd_b{border-bottom: 1px solid #eee;}

/*浮动*/
.fl{float:left;}
.fr{float:right;}

/*弹性盒模型*/
.flex{display: flex;display: -webkit-flex;}

/*footer*/
.footer_box{height:60px;width:750rpx;line-height: 60px;margin-top:20rpx;}
.footer{font-size: 12px;bottom:0;width:750rpx;}

/*无结果提示*/
.null{margin-top: 100rpx}
.null .txt1{color:#000;font-size:38rpx;margin-top: 20rpx;}
.null .txt2{font-size:30rpx;}

/* music icon  */
.music_icon{
    top:28rpx;
    right:28rpx;
    width: 88rpx;
    height: 88rpx;
    border-radius: 50%;
}
.music_icon image{
    width:100%;
    height: 100%;
    border-radius: 50%;
}
.play{
    animation:rot 2s infinite; 
    animation-timing-function: linear
}
@keyframes rot {
    from {
       transform: rotate3d(0, 0, 1, 0deg)
    }
    50% {
       transform: rotate3d(0, 0, 1, 180deg)
    }
    to {
       transform : rotate3d(0, 0, 1, 360deg)
    }
}

