.container{
    padding: 40rpx 30rpx 110rpx 30rpx;
    width: calc(100vw - 60rpx);
     min-height: calc(100vh - 150rpx); 
    overflow: auto;
    height: auto;
    color: #fff;
    background-color: #fff;
}
.dream_detail{
    padding: 30rpx 44rpx 40rpx 44rpx;
    width: calc(100% - 88rpx);
    max-height: 539rpx;
    background-color: #a0da85; 
    margin-bottom: 50rpx;
}
.auther_name{
    color: #fff;
}
.wall_top{
    margin-bottom:26rpx; 
}
.dele_btn{
    height: 100%;
    padding: 0 22rpx;
    line-height: 70rpx;
    font-size: 26rpx;
    right: 0;
    top: 10rpx;
}
.context{
    font-size: 26rpx;
    color: #fff;
    line-height: 42rpx;
    margin-bottom: 30rpx;
    overflow: hidden;
    word-break: break-all;
}
.img{
    width: 100%;
    margin-top: 20rpx;
}
.context_pic{
    width: 340rpx;
    height:192rpx;
    border-radius: 8px;
}
.options{
    height: 44rpx;
    width: 100%;
    font-size: 24rpx;
    line-height: 44rpx;
}
.like_pic{
    width: 150rpx;
}
.like_pic image{
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    border:1rpx solid #fff;
}
.like_pic .likePic1{
    transform: translateX(0);
    z-index: 10;
}
.like_pic .likePic2{
    transform: translateX(10rpx);
    z-index: 20;
}
.like_pic .likePic3{
     transform: translateX(20rpx);
    z-index: 30;
}
